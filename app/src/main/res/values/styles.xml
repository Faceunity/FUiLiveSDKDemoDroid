<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.NoActionBar">
    </style>

    <style name="DemoButton">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:padding">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/radio_border</item>
    </style>

    <style name="DemoSeek">
        <item name="android:progressDrawable">@drawable/seek_back</item>
        <item name="android:maxHeight">3dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:thumbOffset">8dp</item>
        <item name="android:thumb">@drawable/seek_thumb</item>
    </style>

    <style name="common_dlg" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
</resources>
